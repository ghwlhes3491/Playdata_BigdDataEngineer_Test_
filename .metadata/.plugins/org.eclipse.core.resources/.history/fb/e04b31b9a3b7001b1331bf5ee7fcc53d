package com.work.view;

public class LoopTest {

	public static void main(String[] args) {
		//for 구문을 이용해서 1~10까지 출력하면서 누적된 결과를 출력해보세요
		int sum=0;

		for(int i = 1; i <= 10; i++) {
			if (i%2==0) {	//짝수 누적 : 2로 나누었을 때 나머지 값 이용
			sum+=i;
			System.out.printf("%d번째 누적 결과 : %d\n", i, sum);
			}
		}
	}

}
