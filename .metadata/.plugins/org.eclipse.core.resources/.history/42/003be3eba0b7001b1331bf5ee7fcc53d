package com.work.view;

public class IfTest {
	// 실습 : if~~else if ~~ else 구문
	public static void main1(String[] args) {
		//성적을 변수에 저장
		int score = 65;
		
		// 성적이 70점 이상이면 합격 출력, 70점 미만이면 불합격 출력
		if (score>=70) {	//이상이므로 >=
			System.out.println("성적은 "+score+"점 합격입니다");
		}else {
			System.out.println("성적은 "+score+"점 불합격입니다.");
		}
		
	}
	
	public static void main2(String[] args) {
		/*	여러줄 주석
		 * 성적에 따라 등급을 출력하는 프로그램 완성
		 * 성적은 0 ~ 100점이내 90~100 :A, 80~90 :B,....,60미만 : F
		 * 출력형식 => 점수 : 00, 등급 : n
		 */
		int score = 65;
		if(score >= 0 & score<=100) {	//invalid한 것까지 체크해야 함
			if(score>=90) {
				//System.out.println(score+"점 A등급");	// %d점 %f등급 
				System.out.printf("%d점 %c등급", score, 'A');
			}else if (score>=80) {
				System.out.println(score+"점 B등급");
			}else if (score>=70) {
				System.out.println(score+"점 C등급");
			}else if (score>=60) {
				System.out.println(score+"점 D등급");
			}else {
				System.out.println(score+"점 F등급");
			}
			
		}else {
			System.out.println("[오류] 성적은 0 ~ 100점 이내 입니다. : "+ score);
		}
	}
	
	public static void main3(String[] args) { //조금 더 가독성 좋은 코드.
		int score = 22;
		String grade = null;
		if(score >= 0 & score<=100) {	//invalid한 것까지 체크해야 함
			if(score>=90) {
				grade = "A";
			}else if (score>=80) {
				grade = "B";
			}else if (score>=70) {
				grade = "C";
			}else if (score>=60) {
				grade = "D";
			}else {
				grade = "F";
			}
		}else {
			System.out.println("[오류] 성적은 0 ~ 100점 이내 입니다. : "+ score);
		}
		System.out.println(score+"점, "+grade+"등급 입니다." );
	}
	
	//switch문 실습 :  if~~else if ~~ else 구문을 변경
	public static void main(String[] args) {
		
		int score = 75;
		char grade;
		
		//int sscore = (score/10); //굳이 여기서 더 변수 만들필요 x
		
		if (score>=0 & score<=100) {
			switch(score/10) {
			case 10:
			case 9 :
				grade='A'; break;	//break를 적절하게 쓰면 'or'처럼 쓸 수 있다.
			case 8 :
				grade='B'; break;	
			case 7 :
				grade='C'; break;	
			case 6 :
				grade='D'; break;	
			default:
				grade ='F';
			}
		System.out.println(score+"점\t"+grade+"등급" );
		}
		
		
		//랜덤 점수 만들려면?
		int rd= (int)(Math.random()*100+1);
		int rrd = (rd/10);
		System.out.println(rd);		System.out.println(rrd);
		
		if (rd>=0 & rd<=100) {
			switch(rd/10) {
			case 10 :
				grade='A'; break;
			case 9 :
				grade='A'; break;
			case 8 :
				grade='B'; break;	
			case 7 :
				grade='C'; break;	
			case 6 :
				grade='D'; break;	
			default:
				grade ='F';
			}
		System.out.println(rd+"점, "+grade+"등급 입니다." );
		}
	}


}
